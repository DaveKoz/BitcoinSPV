source 'https://github.com/CocoaPods/Specs.git'
platform :ios, 8.0

def shared_pods
    pod 'OpenSSL'
    pod 'CocoaLumberjack', '~> 1.9'
    pod 'AutoCoding', '~> 2.2'
    pod 'CocoaAsyncSocket', '~> 7.4'
end

target 'BitcoinSPV' do
    shared_pods
end

target 'BitcoinSPVTests' do
    shared_pods
end

target 'BitcoinSPVDemo' do
    shared_pods
end
